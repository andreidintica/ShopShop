{% extends "base.html.twig" %}

{% block title %} {{ parent() }} Page de Register {% endblock %}
       
{% block content %} 
    <div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-10">
				 <h1 class="text-center">Page de Register</h1> 


			</div>
		</div>
	</div>


<style>
        .custom-form {
            max-width: 500px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        .custom-register-group {
            margin-bottom: 15px;
        }

        .custom-register-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 8px rgba(0, 86, 179, 0.2);
            outline: none;
        }
    </style>

    <form class="custom-form" action="" method="post">
    <div class="custom-register-group">
        <label for="firstname" class="form-label mt-3">Prénom</label>
        <input type="text" class="custom-register-control form-control" id="firstname" name="firstName" placeholder="Prénom" required>
    </div>
    <div class="custom-register-group">
        <label for="lastname" class="form-label mt-3">Nom</label>
        <input type="text" class="custom-register-control form-control" id="lastname" name="lastName" placeholder="Nom" required>
    </div>
    <div class="custom-register-group">
        <label for="email" class="form-label mt-3">Adresse mail</label>
        <input type="email" class="custom-register-control form-control" id="email" name="email" placeholder="Adresse mail" required>
    </div>
    <div class="custom-register-group">
        <label for="password" class="form-label mt-3">Mot de passe</label>
        <input type="password" class="custom-register-control form-control" id="password" name="password" placeholder="Mot de passe" required>
		<br>
		<small class="form-text text-muted" style="display: block; text-align: center;">Ne partagez jamais votre mot de passe.</small>
    </div>
    <div class="text-center">
        <input type="submit" value="Ajouter" class="btn btn-primary m-2">
    </div>
</form>
	



{% endblock %}